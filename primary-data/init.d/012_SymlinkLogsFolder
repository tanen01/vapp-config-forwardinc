echo "[*] Running SymlinkLogsFolder"

if [ -d $DXHOME/logs ] ; then
	rm -r -f $DXHOME/logs
fi

mkdir -p "/storage/${KUBE_NAMESPACE}/primary-data/logs"
if [ $? -ne 0 ]; then
	echo "[*] Failed to create directory under nfs mount"
	exit 1
fi
ln -s "/storage/${KUBE_NAMESPACE}/primary-data/logs" $DXHOME/logs
